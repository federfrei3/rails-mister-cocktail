<h1>Our famous drinks</h1>

<div class="container-fluid">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-4 mb-4">    
        <div class="card">
          <%= cl_image_tag("bar",
      width: 150, height: 150, crop: :thumb, gravity: :face) %>
          <div class="card-body">
            <h5 class="card-title"><%= cocktail.name %></h5>
            <p class="card-link">
              <%= link_to 'Show more', cocktail, class: 'card-link' %>
            </p>
          </div>
        </div>	
      </div>
    <% end %>
  </div>
</div>

<br>

<div class=link>
  <%= link_to 'New Cocktail', new_cocktail_path, class: "btn btn-light" %>
</div>
<br>

